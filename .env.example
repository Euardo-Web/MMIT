# Thunder WhatsApp System - Configuração de Ambiente

# Porta do servidor (padrão: 3000)
PORT=3000

# Configuração da Z-API
ZAPI_BASE_URL=https://api.z-api.io
ZAPI_TOKEN=seu_token_da_zapi_aqui

# URL do webhook (opcional - para receber eventos da API)
WEBHOOK_URL=https://seu-servidor.com/api/zapi/webhook

# Ambiente (development, production)
NODE_ENV=development

# Configurações opcionais do Chrome (se ainda usar Selenium)
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=
CHROME_USER_DATA_DIR=